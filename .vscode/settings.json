{
    //  |>  ZOOM SETTING <|
    "window.zoomLevel": 0,

    //  |>  Font-Settings: 'Editor'
    "editor.fontSize": 14,
    "editor.fontWeight": 500,
    "editor.lineHeight": 28,
    "editor.fontFamily": "'Cascadia Code'",
    "editor.fontLigatures": true,

    //  |>  AESTHETICS
    "editor.showFoldingControls": "always",

    //  |>  Editor Padding
    "editor.padding.top": 175, //------------- VERTICAL
    "editor.padding.bottom": 400, //---------- VERTICAL
    "editor.scrollBeyondLastColumn": 4, //---- HORIZONTAL
    "editor.scrollBeyondLastLine": false,
    "editor.suggest.showIcons": true,

    //  |>  Breadcrumbs Settings
    "breadcrumbs.icons": true,
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "last",
    "breadcrumbs.symbolPath": "last",
    "breadcrumbs.symbolSortOrder": "type",

    //  |>  Workbench Settings
    "workbench.tree.indent": 16,
    "workbench.editor.limit.value": 3,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.showIcons": false,
    "workbench.tips.enabled": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.tabSizing": "shrink",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.editor.mouseBackForwardToNavigate": false,
    "workbench.editor.labelFormat": "short",
    "workbench.editor.pinnedTabSizing": "shrink",

    //  |>  Font-Settings: 'Terminal'
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "600",
    "terminal.integrated.fontWeightBold": "900",
    "terminal.integrated.fontFamily": "'Hasklig', monospace",

    //  |>  Cursor Settings
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 4,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.multiCursorModifier": "alt",
    "editor.multiCursorPaste": "full",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 3,
    "terminal.integrated.cursorBlinking": true,

    //  |>  Editor Indentation
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.highlightActiveIndentGuide": true,
    "editor.renderIndentGuides": true,
    "html.format.indentInnerHtml": true,

    //  |>  Line/Line-Number Settings
    "editor.rulers": [40, 65, 90, 125],
    "editor.wordWrapColumn": 90,
    "html.format.wrapLineLength": 125,
    "editor.foldingStrategy": "indentation",
    "editor.renderLineHighlight": "all",
    "editor.wordWrap": "wordWrapColumn",
    "editor.wrappingStrategy": "advanced",
    "html.format.wrapAttributes": "force-aligned",

    //  |>  Minimap Options/Settings
    "editor.minimap.maxColumn": 80,
    "editor.minimap.scale": 1,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.size": "proportional",

    //  |>  VSC-Themes
    "workbench.preferredDarkColorTheme": "JS_Dojo",
    "workbench.colorTheme": "JS_Dojo",
    "workbench.iconTheme": "material-icon-theme",

    //  |>  Formatting & Save Actions (Format on Save)
    "files.autoSaveDelay": 2000,
    "editor.formatOnSave": true,

    //  |>  SETTINGS BY LANGUAGE

    //      <--------( JavaScript )-------->
    "[javascript]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true
        }
    },

    //      <--------( JSON & JSONC )-------->
    "[json, jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true
        }
    },

    //      <--------( Markdown & Markdown-Linting )-------->
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.markdownlint": true
        }
    },
    "markdownlint.config": {
        "default": true,
        "MD003": { "style": "atx_closed" },
        "MD007": { "indent": 4 },
        "no-hard-tabs": false
    },
    "markdownlint.run": "onSave",
    "markdownlint.customRules": [],
    "markdown.preview.breaks": true,
    /*

    
    <-------------------<( Miscellaneous )>-------------------> 			  */

    "files.simpleDialog.enable": true,
    "problems.showCurrentInStatus": true,
